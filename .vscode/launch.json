{
    // 使用 IntelliSense 了解相关属性。 
    // 悬停以查看现有属性的描述。
    // 欲了解更多信息，请访问: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "编译+调试客户端程序",
            "type": "cppdbg",
            /* 启动调试请求：
             * attach：附加到正在运行的进程；
             * launch：启动新进程进行调试。*/
            "request": "launch",
            "program": "${fileDirname}/build/${fileBasenameNoExtension}", // build 目录下的可执行文件
            "args": [],
            "stopAtEntry": false, // 是否在程序入口处暂停
            "cwd": "${fileDirname}", // 当前工作目录
            "environment": [
                /* 设置环境变量 LD_LIBRARY_PATH，以包含 openGauss 库路径 */
                {
                    "name": "LD_LIBRARY_PATH",
                    "value": "/home/openGauss/openGauss-server/mppdb_temp_install/lib:${env:LD_LIBRARY_PATH}"
                }
            ],
            "externalConsole": false, // 是否使用外部终端
            "MIMode": "gdb", // 使用 GDB 作为调试器
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "启用 GDB 的 pretty-printing",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "源文件编译"
        },
        {
            "name": "附加到 gaussdb 进程（内核调试）",
            "type": "cppdbg",
            "request": "attach",
            "program": "/home/openGauss/openGauss-server/mppdb_temp_install/bin/gaussdb",
            "processId": "${command:pickProcess}", // 手动选择要附加的进程
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "miDebuggerArgs": "-x ${workspaceFolder}/.gdbinit", // 加载 .gdbinit 文件
            "setupCommands": [
                {
                    "description": "启用 GDB 的 pretty-printing",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "允许加载 .gdbinit 文件",
                    "text": "-gdb-set auto-load safe-path /",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}